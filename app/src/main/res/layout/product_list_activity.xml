<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/product_list_root_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include
            android:id="@+id/reduced_appbar"
            layout="@layout/reduced_toolbar"/>

    <ListView
            android:layout_below="@+id/reduced_appbar"
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="multipleChoice"
            android:dividerHeight="2dp"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/addProductsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_round"
            android:tint="@color/under_white"/>
</RelativeLayout>