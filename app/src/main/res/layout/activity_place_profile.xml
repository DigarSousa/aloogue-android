<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_material_dark">

    <RelativeLayout
            android:id="@+id/bannerArea"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_below="@+id/mainToolbar">

        <ImageView
                android:id="@+id/bannerImage"
                android:layout_width="match_parent"
                android:layout_height="292dp"
                android:scaleType="centerCrop">
        </ImageView>

        <alugueis.alugueis.view.RoundedImageView
                android:id="@+id/pictureImage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>

        <TextView
                android:id="@+id/placeNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/pictureImage"
                android:text="Teste de nome"
                android:textSize="25sp"
        />

        <Button
                android:id="@+id/callButton"
                android:layout_width="250dp"
                android:layout_height="36dp"
                android:text="@string/call"
                android:layout_marginTop="10dp"
                android:background="@drawable/raised_button_secondary"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ImageView
            android:id="@+id/addressIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:layout_below="@+id/bannerArea"
            android:src="@drawable/pin_laranja">
    </ImageView>

    <TextView
            android:id="@+id/placeAddressText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="EndereÃ§o testeiusahaiuhsaiusahiuhsaisauhuisahuisahisahusaihusaihsauihsaihsaishusaidddd"
            android:textSize="15sp"
            android:maxLines="2"
            android:layout_alignTop="@+id/addressIcon"
            android:layout_toRightOf="@+id/addressIcon"
            android:layout_marginLeft="10dp"/>

    <ImageView
            android:id="@+id/telIcon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:layout_below="@+id/addressIcon"
            android:src="@drawable/phone_laranja">
    </ImageView>

    <TextView
            android:id="@+id/placePhoneText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="(31) 3333-3333"
            android:textSize="15sp"
            android:layout_alignTop="@+id/telIcon"
            android:layout_toRightOf="@+id/telIcon"
            android:layout_marginLeft="10dp"/>

    <ImageView
            android:id="@+id/workIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:layout_below="@+id/telIcon"
            android:src="@drawable/work_period">
    </ImageView>

    <TextView
            android:id="@+id/workText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignTop="@+id/workIcon"
            android:layout_toRightOf="@+id/workIcon"
            android:layout_marginLeft="10dp"/>

</RelativeLayout>
