            <!--android:layout_below="@+id/useAsArea"-->

            <RelativeLayout
                android:id="@+id/generalDataArea"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
