            <!-- ______________________________________________________ DADOS DA CONTA -->
            <TextView
                android:id="@+id/accountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accountData"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/generalDataArea"
                android:layout_marginTop="20dp"
                />

            <RelativeLayout
                android:id="@+id/accountArea"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/accountLabel"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/border_frame"
                android:elevation="2dp">

                <EditText
                    android:id="@+id/emailText"
                    style="@style/editTextLight"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/emailLabel"
                    android:inputType="textEmailAddress"/>

                <EditText
                    android:id="@+id/passwordText"
                    style="@style/editTextLight"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/passwordLabel"
                    android:layout_marginTop="10dp"
                    android:inputType="textPassword"
                    android:layout_below="@+id/emailText"/>

                <TextView
                    android:id="@+id/minMaxPasswordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/minMaxPasswordText"
                    android:textSize="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_below="@+id/passwordText"
                    android:layout_alignRight="@+id/passwordText"
                    />

                <EditText
                    android:id="@+id/passwordConfirmText"
                    style="@style/editTextLight"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/passwordConfirmLabel"
                    android:inputType="textPassword"
                    android:layout_below="@+id/minMaxPasswordText"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/finishArea"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/accountArea"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/border_frame"
                android:elevation="2dp">

                <CheckBox
                    android:id="@+id/acceptTermsCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/acceptContractTermsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/acceptTerms"
                    android:textSize="12dp"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_toRightOf="@+id/acceptTermsCheck"
                    android:layout_alignBaseline="@+id/acceptTermsCheck"/>
            </RelativeLayout>

            <Button
                android:id="@+id/iAmDoneButton"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/iAmDone"
                android:background="@drawable/raised_button"
                android:layout_below="@+id/finishArea"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
